{
  "name": "Privly Content Extension",
  "version": "0.3.3",
  "description": "The Official Privly extension for Opera.",
  "manifest_version": 2,
  "permissions": ["webRequest",
                  "webRequestBlocking",
                  "contextMenus",
                  "tabs",
                  "<all_urls>"],
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
      "images/logo_48.png",
      "privly-applications/PlainPost/show.html",
      "privly-applications/ZeroBin/show.html",
      "privly-applications/shared/javascripts/jquery-1.10.2.min.map"
    ],
  "icons": { "16": "images/logo_16.png",
             "48": "images/logo_48.png",
             "96": "images/logo_96.png",
             "112": "images/logo_112.png",
             "128": "images/logo_128.png" },
  "browser_action": {
      "default_icon": { 
        "19": "images/logo_48.png", 
        "38": "images/logo_48.png" 
      },
      "default_title": "Turn Privly Viewing Off"
    },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "all_frames": true,
      "js": ["javascripts/content_scripts/post_new_link.js",
             "javascripts/content_scripts/privly.js"]
    }
  ]
}
